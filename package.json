{
  "name": "proyecto---examen",
  "version": "1.0.0",
  "description": "Backend del sistema web para el registro y análisis de ventas de una cafetería",
  "type": "module",
  "main": "dist/app.js",

  "scripts": {
    "dev": "nodemon backend/src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",

    "setup": "powershell -File .\\setup-directories.ps1",
    "verify": "powershell -File .\\verify-structure.ps1",

    "test:category": "npx ts-node-esm backend/src/tests/test-category.ts",
    "test:product": "npx ts-node-esm backend/src/tests/test-product.ts",
    "test:sale": "npx ts-node-esm backend/src/tests/test-sale.ts",
    "test:saleitem": "npx ts-node-esm backend/src/tests/test-saleitem.ts"
  },

  "keywords": [
    "nodejs",
    "typescript",
    "hexagonal-architecture",
    "ddd",
    "cafeteria",
    "sales",
    "data-analysis"
  ],

  "author": "",
  "license": "ISC",

  "dependencies": {
    "express": "^5.2.1",
    "cors": "^2.8.6"
  },

  "devDependencies": {
    "typescript": "^5.9.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.1.11",
    "@types/node": "^25.2.0",
    "@types/express": "^5.0.6",
    "@types/cors": "^2.8.19"
  }
}
